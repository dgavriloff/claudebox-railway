{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "params": {
        "ROOT_PASSWORD": {
            "desc": "The password for the 'box' user (uses for SSH and sudo).",
            "optional": false
        }
    }
}